@using System.Security.Claims
@using GudSafe.Data.Enums
@{
    Layout = "_Layout";

    var userName = User.FindFirstValue(ClaimTypes.Name);
    var userRole = User.FindFirstValue(ClaimTypes.Role);

    ViewBag.LoggedIn = User.Identity?.IsAuthenticated;
    ViewData["Username"] = userName ?? string.Empty;
    ViewData["UserRole"] = userRole ?? UserRole.Default.ToString();
    ViewBag.IsAdmin = userRole == UserRole.Admin.ToString();
}